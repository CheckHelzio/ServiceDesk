<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_label_prioridad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Progreso:"
            android:textColor="@color/colorDeTextos"
            android:textSize="12sp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="-3dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_en_progreso"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="En progreso"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/radio_en_espera"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="En espera"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/radio_finalizado"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Finalizado"
                android:textSize="12sp" />

        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#5a000000" />
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_margin="24dp"
        android:id="@+id/input_descripcion_del_problema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:layout_marginTop="16dp"
        app:hintTextAppearance="@style/hint_reporte">

        <EditText
            android:id="@+id/et_descripcion_del_problema"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Comentario:"
            android:inputType="textMultiLine"
            android:paddingBottom="20dp"
            android:textColor="@color/colorDeTextos"
            android:textColorHint="@color/colorDeTextos"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="serif" />

    </android.support.design.widget.TextInputLayout>

</LinearLayout>